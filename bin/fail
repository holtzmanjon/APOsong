#!/usr/bin/env python
from astropy.time import Time
import os
import subprocess

from aposong import *
import robotic

os.chdir('/home/song/APOsong')
init()

mjd=int(Time.now().mjd)
if os.path.exists('/home/song/APOsong/{:d}'.format(mjd)) :
    robotic.mail('APO SONG observing {:d} FAILED to complete'.format(int(Time.now().mjd)),'ALERT: aposong script did not complete! ')
