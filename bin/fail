#!/usr/bin/env python
from astropy.time import Time
import os
import subprocess
import yaml
import mail

with open('/home/song/APOsong/aposong.yml','r') as config_file :
    config = yaml.safe_load(config_file)

mjd=int(Time.now().mjd)
if os.path.exists('/home/song/APOsong/{:d}'.format(mjd)) :
    mail.send(config['mail_recipients'],subject='APO Song observing {:d} FAILED to complete'.format(mjd),message='ALERT: aposong script did not complete! ',snapshot=True)
    os.remove('/home/song/APOsong/{:d}'.format(mjd))
